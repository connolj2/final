<h2>
   <i class="fas fa-sun"></i>
    <h1>How was <%= @vacation[:title]? %></h1>
</h2>


<form action="/vacation/<%= @vacation[:id] %>/reviews/create">
  <div class="form-group">
    <label>Best Vacation Ever?</label>
    <select class="form-control" name="going">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </select>
  </div>
  <div class="form-group">
    <label>Reviews</label>
    <textarea class="form-control" rows="3" name="reviews"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>